    <div id="chatroom">
      <div class="orange-container2">
        <form {{action 'authenticate' on="submit"}}>
          <fieldset>
            <div class="login-form">
              <h1>Log-In</h1>

              {{input value=identification placeholder='Enter Email' type='email' }}

              {{input value=password placeholder='Enter Password' type='password' }}<br>

              <button type="submit">Login</button>
            </div>

          </fieldset>
        </form>
    </div>
      <div class="chat">
        <h2>Welcome to the Chatroom</h2>
        <p>
          This is a place where you can ask you fellow Font Jam Community members for opinions on projects you're doing and what fonts may work best.
        </p>
      <form {{action 'save' on="submit"}} class="form-container">
        {{textarea value=newComment}}
        <button class="comment-button" type="submit" {{action "saveComment"}}>Submit</button>
      </form>

      <ul>
        <div class=individualcomment>
        {{#each comment in model.comments itemController="application"}}
          {{#if comment.isEditing}}
            <li><a {{action "saveEdit" comment}}>Save</a><br>
              {{input value=comment.model.body}}</li>

          {{else}}
            <li>{{comment.model.user}}<a {{action "edit" comment}}>Edit</a> <a {{action "destroyComment" comment}}>Delete</a><br>
              {{comment.model.body}}</li>
              

          {{/if}}
        {{/each}}
      </div>
      </ul>

    </div>

